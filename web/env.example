# MarinaObuv Environment Configuration
# Copy this file to .env.production and fill in your values

# Core Configuration
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://marina-obuv.ru
NEXT_PUBLIC_BRAND_NAME=MarinaObuv

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://marina-obuv.ru

# Whapi.cloud API - removed (no longer used)

# Yandex Object Storage (S3-compatible)
S3_ENDPOINT=https://storage.yandexcloud.net
S3_REGION=ru-central1
S3_BUCKET=your_bucket_name
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
CDN_BASE_URL=https://your-cdn-domain.com

# Yandex Cloud
YC_FOLDER_ID=your_folder_id
YC_API_KEY=your_yc_api_key

# Target Group Chat
TARGET_GROUP_ID=your_target_group_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_VISION_MODEL=gpt-4o
OPENAI_REQUEST_DELAY_MS=1000

# Processing Configuration
MESSAGE_FETCH_HOURS=24
PROCESSING_BATCH_SIZE=10
MESSAGE_PROCESSING_HOURS=24

# Session
SESSION_SECRET=your_session_secret_here

# SMS Configuration
SMS_API_KEY=your_sms_api_key
SMS_USE_CONSOLE=true
